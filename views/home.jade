extends layout

block content

  include nav

  .container-fluid
    .row
      .col-md-6.col-md-offset-3
        .home
          img.img-circle(src="#{user.avatarUrlMedium}")

          h1 Hello, #{user.username}!
          p 
            |You authenticated using app 
            strong #{clientId}
            |, this is your token:
          p.mono #{token}

          h3 You're currently in the following rooms:
          - each room in rooms
            a.btn(href="https://gitter.im#{room.url}")
              span= room.name

          h1.room-bot <strong>ROOM</strong> which would be scanned by <strong>BOT</strong>
              p
              a.btn.btn-success(href="https://gitter.im/#{room}")
                span= room
